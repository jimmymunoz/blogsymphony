<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet"
            href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/custom_blog.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/font-awesome-4.7.0/css/font-awesome.css') }}" />
    </head>
    <body>
        
        <header class="navbar navbar-bright navbar-fixed-top" role="banner">
          <div class="container">
            <div class="navbar-header">
              <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
            </div>
            <nav class="collapse navbar-collapse" role="navigation">
              <ul class="nav navbar-nav">
                  <li>
                    <a href="{{ path('homepage') }}" class="navbar-brand"><i class="glyphicon glyphicon-home"></i> Home</a>
                  </li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                  <li>
                    <a href="{{ path('fos_user_security_logout') }}"><i class="glyphicon glyphicon-log-in"></i>  {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                  </li>
                {%  else %}
                  <li>
                    <a href="{{ path('fos_user_security_login') }}"><i class="glyphicon glyphicon-log-out"></i> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                  </li>
                {%  endif %}
              </ul>
              <ul class="nav navbar-right navbar-nav">
                <li class="dropdown">
                  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      
                      <span class=""><i class="glyphicon glyphicon-user"></i> {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</span>
                    </a>
                  {% else %}

                  {% endif %}
                </li>
              </ul>
            </nav>
          </div>
        </header>
        <div class="container">
       
          {% for type, messages in app.session.flashBag.all %}
              {% for message in messages %}
                  <div class="{{ type }}">
                      {{ message|trans({}, 'FOSUserBundle') }}
                  </div>
              {% endfor %}
          {% endfor %}
        </div>

            <div id="masthead">  
              <div class="container">
                <div class="row">
                  <a href="{{ path('homepage') }}">
                    <div class="col-md-7">
                      <h1>Jimmy's Blog
                        <p class="lead"></p>
                      </h1>
                    </div>
                  </a>
                  <div class="col-md-3">
                    <div class="well well-lg text-right"> 
                      <div class="row">
                        <div class="col-sm-12" >
                          <a href="https://fr.linkedin.com/in/jimmy-munoz-b5a71b59">
                              <i class="fa fa-linkedin-square" ></i> 
                          </a>
                          <a href="https://github.com/jimmymunoz">
                              <i class="fa fa-github-square" ></i> 
                          </a>
                          <a href="https://twitter.com/JimmyMuoz1">
                              <i class="fa fa-twitter" ></i> 
                          </a>
                        
                        </div>
                      </div>
                    </div>
                  </div>
                </div> 
              </div><!-- /cont -->
              <div class="container">
                <div class="row">
                  <div class="col-md-12">
                    <div class="top-spacer"> </div>
                  </div>
                </div> 
              </div><!-- /cont -->
              
            </div>
            <div class="container">
              <div class="row">
                   <div class="col-md-12"> 
                      
                      <div class="panel">
                        <div class="panel-body main_content">
                          {% block fos_user_content %}{% endblock %}
                         {% block body %}{% endblock %}
                          
                      </div>
                   </div>
                </div>
                <footer>
                  <div class="container">
                    <div class="row">
                      <div class="col-sm-6">
                        <ul class="list-inline">
                          <li><i class="icon-facebook icon-2x"></i></li>
                          <li><i class="icon-twitter icon-2x"></i></li>
                          <li><i class="icon-google-plus icon-2x"></i></li>
                          <li><i class="icon-pinterest icon-2x"></i></li>
                        </ul>
                        
                      </div>
                      <div class="col-sm-6">
                          <p class="pull-right">Jimmy Munoz</p>      
                      </div>
                    </div>
                  </div>
                </footer>
              </div>
            </div>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>