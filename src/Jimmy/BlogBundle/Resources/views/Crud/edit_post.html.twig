{% extends "::base.html.twig" %}

{% block title %}JimmyBlogBundle:Crud:newPost{% endblock %}

{% block body %}
	<h1><i class="glyphicon glyphicon-pencil"></i> {{ title }}</h1>

	{{ form_start(form) }}
	{{ form_errors(form.title) }}
	  <div class="form-group">
	  	{{ form_label(form.title) }}
	    {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}

	  </div>
	  <div class="form-group">
	    {{ form_label(form.url) }}
	    {{ form_widget(form.url, { 'attr': {'class': 'form-control'} }) }}
	  </div>
	  <div class="form-group">
	  	{{ form_label(form.content) }}
	    {{ form_widget(form.content, { 'attr': {'class': 'form-control', 'rows': 20} }) }}
	  </div>
  	  <div class="text-right">
		  {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
		  <a href="{{ url('homepage') }}" class="btn btn-danger">Cancel</a>
		{{ form_end(form) }}
	  </div>
{% endblock %}

{% block javascripts %}
	
{% endblock %}
